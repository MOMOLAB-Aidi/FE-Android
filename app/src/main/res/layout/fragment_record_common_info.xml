<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.record.CommonRecordInfoFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="오늘 기록 - "
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                tools:text="2025년 10월 22일"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/title_tv"
                app:layout_constraintTop_toTopOf="@id/title_tv" />

            <TextView
                android:id="@+id/common_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="공통 정보 작성"
                android:textColor="@color/text_primary"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/title_tv"
                app:layout_constraintTop_toBottomOf="@id/title_tv" />

            <TextView
                android:id="@+id/weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="체중"
                android:textColor="@color/main_2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/common_info_tv"
                app:layout_constraintTop_toBottomOf="@id/common_info_tv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/weight_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="100dp"
                android:backgroundTint="@color/edit_card"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/weight_tv"
                app:layout_constraintTop_toBottomOf="@id/weight_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/weight_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:inputType="numberDecimal"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                android:text="kg"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/weight_cv"
                app:layout_constraintTop_toTopOf="@id/weight_cv" />

            <TextView
                android:id="@+id/blood_pressure_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="혈압"
                android:textColor="@color/main_2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/weight_tv"
                app:layout_constraintTop_toBottomOf="@id/weight_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/systolic_cv"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/edit_card"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="@id/weight_tv"
                app:layout_constraintTop_toBottomOf="@id/blood_pressure_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/systolic_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:inputType="number"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/blood_pressure_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                android:text="/"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/systolic_cv"
                app:layout_constraintTop_toTopOf="@id/systolic_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/diastolic_cv"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/edit_card"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/blood_pressure_divider"
                app:layout_constraintTop_toBottomOf="@id/blood_pressure_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/diastolic_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:inputType="number"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/blood_pressure_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                android:text="mmHg"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/weight_unit"
                app:layout_constraintTop_toTopOf="@id/diastolic_cv" />

            <TextView
                android:id="@+id/fasting_glucose_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="공복 혈당"
                android:textColor="@color/main_2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/blood_pressure_tv"
                app:layout_constraintTop_toBottomOf="@id/systolic_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fasting_glucose_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="100dp"
                android:backgroundTint="@color/edit_card"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/fasting_glucose_tv"
                app:layout_constraintTop_toBottomOf="@id/fasting_glucose_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/fasting_glucose_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:inputType="number"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/fasting_glucose_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                android:text="mg/dL"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/fasting_glucose_cv"
                app:layout_constraintTop_toTopOf="@id/fasting_glucose_cv" />

            <TextView
                android:id="@+id/urine_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="소변 횟수"
                android:textColor="@color/main_2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/fasting_glucose_tv"
                app:layout_constraintTop_toBottomOf="@id/fasting_glucose_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/urine_count_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="100dp"
                android:backgroundTint="@color/edit_card"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/urine_count_tv"
                app:layout_constraintTop_toBottomOf="@id/urine_count_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <EditText
                        android:id="@+id/urine_count_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:inputType="number"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/urine_count_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                android:text="회"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/urine_count_cv"
                app:layout_constraintTop_toTopOf="@id/urine_count_cv" />

            <TextView
                android:id="@+id/turbidity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="복막액 혼탁"
                android:textColor="@color/main_2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/urine_count_tv"
                app:layout_constraintTop_toBottomOf="@id/urine_count_cv" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/turbidity_n_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/turbidity_tv"
                app:layout_constraintStart_toStartOf="@id/turbidity_tv"
                android:minWidth="0dp"
                android:minHeight="0dp"/>

            <TextView
                android:id="@+id/turbidity_n_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"
                android:textSize="18sp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@id/turbidity_n_checkbox"
                app:layout_constraintTop_toTopOf="@id/turbidity_n_checkbox"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/turbidity_y_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/turbidity_n_tv"
                app:layout_constraintStart_toEndOf="@id/turbidity_n_tv"
                android:minWidth="0dp"
                android:minHeight="0dp"/>

            <TextView
                android:id="@+id/turbidity_y_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="있음"
                android:textSize="18sp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@id/turbidity_y_checkbox"
                app:layout_constraintTop_toTopOf="@id/turbidity_y_checkbox"/>

            <TextView
                android:id="@+id/notes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="비고"
                android:textColor="@color/main_2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/turbidity_tv"
                app:layout_constraintTop_toBottomOf="@id/turbidity_n_checkbox" />

            <androidx.cardview.widget.CardView
                android:id="@+id/notes_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:backgroundTint="@color/edit_card"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/notes_tv"
                app:layout_constraintTop_toBottomOf="@id/notes_tv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="16dp">

                    <EditText
                        android:id="@+id/notes_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="추가 정보를 입력하세요"
                        android:maxLines="4"
                        android:background="@color/transparent"
                        android:inputType="text"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음으로"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/text_primary"
            app:cornerRadius="12dp"
            android:backgroundTint="#F6F6F6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="10dp"
            android:enabled="false"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>