<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.onboarding.AgreementFragment">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동의 및 약관"
        android:textSize="28sp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용을 위한 동의를 진행해주세요."
        android:textSize="20sp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/term1_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="260dp"
        android:layout_marginStart="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <TextView
        android:id="@+id/term1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용 약관 동의 (필수) >"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/text_primary"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/term1_checkbox"
        app:layout_constraintTop_toTopOf="@id/term1_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/term1_checkbox"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/term2_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/term1_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <TextView
        android:id="@+id/term2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 수집 및 이용 동의 (필수) >"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/text_primary"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/term2_checkbox"
        app:layout_constraintTop_toTopOf="@id/term2_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/term2_checkbox"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/term3_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/term2_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <TextView
        android:id="@+id/term3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="민감정보(건강정보) 처리 동의 (필수) >"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/text_primary"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/term3_checkbox"
        app:layout_constraintTop_toTopOf="@id/term3_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/term3_checkbox"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/term4_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/term3_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <TextView
        android:id="@+id/term4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 제3자 제공 동의 (필수) >"
        android:textColor="@color/text_primary"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/term4_checkbox"
        app:layout_constraintTop_toTopOf="@id/term4_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/term4_checkbox"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/term5_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/term4_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <TextView
        android:id="@+id/term5_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마케팅 정보 수신 동의 (선택) >"
        android:textColor="@color/text_primary"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/term5_checkbox"
        app:layout_constraintTop_toTopOf="@id/term5_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/term5_checkbox"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/term6_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/term5_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <TextView
        android:id="@+id/term6_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연구 통계 목적 활용 동의 (선택) >"
        android:textColor="@color/text_primary"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/term6_checkbox"
        app:layout_constraintTop_toTopOf="@id/term6_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/term6_checkbox"
        android:layout_marginStart="12dp"/>

    <View
        android:id="@+id/checkbox_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@+id/term6_checkbox"
        android:layout_marginTop="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/all_checkbox"
        android:layout_width="28dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkbox_underline" />

    <TextView
        android:id="@+id/allcheck_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 동의"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/text_primary"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/all_checkbox"
        app:layout_constraintTop_toTopOf="@id/all_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/all_checkbox"
        android:layout_marginStart="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음으로"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="#0F0F0F"
        app:cornerRadius="12dp"
        android:backgroundTint="#F6F6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>